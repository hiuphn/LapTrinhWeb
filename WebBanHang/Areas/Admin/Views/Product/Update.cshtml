</div>
<div class="mobile-menu-overlay"></div>


<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">

        <div class="row clearfix progress-box">
            <div class="col-lg-12">
                <div class="col-12">
                    <div class="card">
                        <h5 class="card-header">Thay đổi</h5>
                        <div class="card-body">

                            <form id="formValidationExamples" class="row g-3" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" /> <input type="hidden" asp-for="Id" />
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Tên sản phẩm</label>
                                    <input type="text" id="formValidationName" class="form-control" asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Giá</label>
                                    <input id="formValidationName" class="form-control" asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Số lượng</label>
                                    <input type="number" id="formValidationName" class="form-control" asp-for="Number" class="form-control" />
                                    <span asp-validation-for="Number" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Mô tả</label>
                                    <input id="formValidationName" class="form-control" asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Hình</label>
                                    <img src="@Model.ImageUrl" alt="Logo Image" id="previewImage" style="width: 100px; height: auto;" />
                                    <input type="file" id="imageInput" asp-for="ImageUrl" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Nhiều ảnh</label>
                                    @foreach (var imageUrl in ViewBag.ProductImages)
                                    {
                                        <img src="@imageUrl" alt="Product Image" id="previewImage1" style="width: 100px; height: 100px; object-fit:cover" />
                                    }

                                    <input type="file" asp-for="Images" id="imageInput1" class="form-control" multiple />
                                    <span asp-validation-for="Images" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CategoryId" class="control-label"></label>
                                    <select id="CategoryId" asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="SubcategoryId" class="control-label"></label>
                                    <select id="SubcategoryId" asp-for="SubcategoryId" asp-items="ViewBag.Subcategory" class="form-control"></select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="formValidationName">Nhà cung cấp</label>
                                    <select id="formValidationName" class="form-control" asp-for="SupplierID" asp-items="@ViewBag.Supplier"
                                            class="form-control"></select>

                                    <span asp-validation-for="SupplierID" class="text-danger"></span>
                                </div>
                                <div class="col-12 form-group">
                                    <button type="submit" value="Save" class="btn btn-primary text-white button">Lưu</button>

                                    <button class="btn btn-primary text-white button"><a asp-action="Index" class="text-white button">Quay về danh sách</a></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader()
                reader.onload = function (e) {
                    const img = document.getElementById('previewImage');
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    <script>
        document.getElementById('imageInput1').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader()
                reader.onload = function (e) {
                    const img = document.getElementById('previewImage1');
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var categoryId = $('#CategoryId').val();
            if (categoryId) {
                updateSubcategories(categoryId);
            }

            $('#CategoryId').change(function () {
                var categoryId = $(this).val();
                updateSubcategories(categoryId);
            });

            function updateSubcategories(categoryId) {
                $.getJSON('@Url.Action("GetSubcategories", "Product")', { categoryId: categoryId }, function (subcategories) {
                    var subcategorySelect = $('#SubcategoryId');
                    subcategorySelect.empty();
                    $.each(subcategories, function (index, subcategory) {
                        subcategorySelect.append($('<option/>', {
                            value: subcategory.value,
                            text: subcategory.text
                        }));
                    });
                });
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}