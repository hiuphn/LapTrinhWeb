@model IEnumerable<WebBanHang.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div style="padding-top:100px;padding-left:50px;padding-right:50px">
<h1 style=" text-align:center">Thêm Sản Phẩm Mới</h1>
<a  asp-action="Add" class="btn border border-secondary rounded-pill  text-primary"> <i class="bi bi-plus-square-fill"></i> Create New</a>

    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table project-list-table table-nowrap align-middle table-borderless">
                        <thead>
                            <tr>
                                <th scope ="col">Hình ảnh</th>
                                <th scope="col" >Tên</th>
                                <th scope="col">Danh Mục</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Chú thích</th>
                                <th scope="col" style="width: 200px;height:100px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="500px" alt="" class="avatar-sm rounded-circle me-2" />
                                    <td><span class="badge badge-soft-danger mb-0">@item.Name</span></td>
                                        <td><span class="badge badge-soft-success mb-0">@item.Category.Name</span></td>
                                        <td><span class="badge badge-soft-info mb-0">@item.Price</span></td>
                                    <td><span class="badge badge-soft-danger mb-0">@item.Description</span></td>
                                    <td>
                                        <ul class="list-inline mb-0" style="align-items:center">
                                            <li class="list-inline-item">
                                                <span class="badge badge-soft-warning mb-0">
                                                    <a asp-action="Update" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Sửa" class="px-2 text-warning" ><i class="bi bi-pencil-square font-size-200"></i></a>
                                                </span>
                                            </li>
                                            <li class="list-inline-item">
                                                <span class="badge badge-soft-success mb-0">
                                                    <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Chi Tiết" class="px-2 text-success"><i class="bi bi-list-task font-size-200"></i></a>
                                                </span>
                                            </li>
                                            <li class="list-inline-item">
                                                <span class="badge badge-soft-danger mb-0">
                                                    <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Xóa" class="px-2 text-danger"><i class="bi bi-trash font-size-200"></i></a>
                                                </span>
                                            </li>
                                            
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>