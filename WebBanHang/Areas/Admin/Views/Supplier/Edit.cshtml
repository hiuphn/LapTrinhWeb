<div class="col-12">
    <div class="card">
        <h5 class="card-header">Thay đổi</h5>
        <div class="card-body">

            <form id="formValidationExamples" class="row g-3" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="SupplierID" />
                <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Tên công ty</label>
                    <input type="text" id="formValidationName" class="form-control" asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Hình logo</label>
                    <img src="@Model.Logo" alt="Logo Image" id="previewImage" style="width: 100px; height: auto;" />
                    <input type="file" id="imageInput" asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                 <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Email</label>
                    <input type="text" id="formValidationName" class="form-control" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                 <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Điện thoại</label>
                    <input type="text" id="formValidationName" class="form-control" asp-for="SuplierPhone" class="form-control" />
                    <span asp-validation-for="SuplierPhone" class="text-danger"></span>
                </div>
                 <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Địa chỉ</label>
                    <input type="text" id="formValidationName" class="form-control" asp-for="SupplierAddress" class="form-control" />
                    <span asp-validation-for="SupplierAddress" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="formValidationName">Mô tả</label>
                    <input type="text" id="formValidationName" class="form-control" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-12 form-group">
                    <button type="submit" value="Save" class="btn btn-primary">Lưu</button>

                    <button class="btn btn-primary"><a asp-action="Index">Quay về danh sách</a></button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader()
                reader.onload = function (e) {
                    const img = document.getElementById('previewImage');
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

