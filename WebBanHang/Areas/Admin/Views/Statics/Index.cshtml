<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <div class="row clearfix progress-box">
            <form asp-controller="Statics" asp-action="Index" method="post">
                <input name="year" type="number" id="inputYear" min="1900" max="2100" placeholder="Nhập năm..." required>

                <button class="btn btn-outline-primary btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark" type="submit">Xem doanh thu</button>
            </form>
            <div class="col-lg-12">
                <div class="card-box mb-30">
                  
                    <div class="pb-20">
                       
                        @if (year.HasValue)
                        {
                            <div class="container-fluid pt-4 px-4">
                                <div class="row g-4">
                                    <div class="col-sm-6 col-xl-3">
                                        <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                            <i class="fa fa-chart-bar fa-3x text-primary"></i>
                                            <div class="ms-3">
                                                <p class="mb-2">Tổng doanh thu của năm @(year.Value)</p>
                                                <h6 class="mb-0">@totalRevenue.Value.ToString("C", cultureInfo)</h6>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-xl-3">
                                        <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                            <i class="fa fa-chart-bar fa-3x text-primary"></i>
                                            <div class="ms-3">
                                                <p class="mb-2">Tổng người dùng</p>
                                                <h6 class="mb-0">@userCount người</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <canvas id="myChart"></canvas>
                            </div>
                        }
                        else
                        {
                            <div class="container-fluid pt-4 px-4">
                                <div class="row g-4">
                                    <div class="col-sm-6 col-xl-3">
                                        <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                            <i class="fa fa-chart-bar fa-3x text-primary"></i>
                                            <div class="ms-3">
                                                <p class="mb-2">Tổng doanh thu </p>
                                                <h6 class="mb-0">@totalRevenue.Value.ToString("C", cultureInfo)</h6>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-xl-3">
                                        <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                                            <i class="fa fa-chart-bar fa-3x text-primary"></i>
                                            <div class="ms-3">
                                                <p class="mb-2">Tổng người dùng</p>
                                                <h6 class="mb-0">@userCount người</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {


    <script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script>
        const ctx = document.getElementById('myChart');
        //const revenueData = @Html.Raw(Json.Serialize(ViewBag.RevenueData));
        var revenueData = @Html.Raw(Json.Serialize(ViewBag.RevenueData));
        var chartData = revenueData.map(item => item.value);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                datasets: [{
                    label: 'Doanh thu',
                    data: chartData,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 30,
                        ticks: {
                            callback: function (value, index, values) {
                                return value + ' triệu'; // Thêm chữ 'triệu' vào giá trị
                            }
                        }
                    }
                }
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

