        </div>
    </div>
</div>
<div class="mobile-menu-overlay"></div>


<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <p>
            <a href="@Url.Action("Export","Excel")" class="btn border border-secondary rounded-pill px-3 text-primary">
                <i class="bi bi-plus-square-fill"></i> Xuất file Excel
            </a>
        </p>
        <div class="row clearfix progress-box">
            <div class="col-lg-12">
                <div class="card-box mb-30">
                    <div class="pd-20">
                        <div class="pd-20">
                            <h4 class="text-blue h4">Quản lí đơn hàng</h4>

                        </div>
                        <form asp-action="Index" method="get">
                            <label for="date">Chọn ngày:</label>
                            <input type="date" id="date" name="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <button type="submit" class="btn btn-outline-success btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark"><i class="bi bi-eye"></i>Xem</button>
                           

                        </form>

                    </div>
                    <div class="pb-20">
                        <form method="get" asp-action="Index" id="pageSizeForm" class="page-size-form">
                            <div class="form-group d-flex align-items-center">
                                <label for="pageSize" class="form-label"><strong>Trình bày</strong></label>
                                <select id="pageSize" name="pageSize" class="form-select ml-2" onchange="submitPageSize();">
                                    <option value="10" selected="@(ViewBag.CurrentPageSize == 10)">10</option>
                                    <option value="20" selected="@(ViewBag.CurrentPageSize == 20)">20</option>
                                    <option value="50" selected="@(ViewBag.CurrentPageSize == 50)">50</option>
                                </select>
                            </div>
                        </form>
                        <table class="table project-list-table table-nowrap align-middle table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Tên Khách hàng</th>
                                    <th scope="col">Ngày Đặt Hàng</th>
                                    <th scope="col">Địa Chỉ</th>
                                    <th scope="col">Tổng Tiền</th>
                                    <th scope="col">Ghi Chú</th>
                                    <th scope="col">Trạng Thái</th>
                                    <th scope="col">Cập Nhật Trạng Thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>

                                            <p class="text-body">@item.Id</p>
                                        </td>
                                        <td><span class="badge badge-soft-success mb-0">@item.CustomerName</span></td>
                                        <td><span class="badge badge-soft-danger mb-0">@item.OrderDate</span></td>
                                        <td><span class="badge badge-soft-warning mb-0">@item.ShippingAddress</span></td>
                                        <td><span class="badge badge-soft-info mb-0">@item.TotalPrice</span></td>
                                        <td><span class="badge badge-soft-primary mb-0">@item.Notes</span></td>
                                        <td><span class="badge badge-soft-danger mb-0">@item.Status</span></td>
                                        <td>
                                            <span class="badge badge-soft-danger mb-0">
                                                <form asp-action="UpdateStatus" method="post">
                                                    <input type="hidden" name="orderId" value="@item.Id" />
                                                    <select name="status">
                                                        <option value="@OrderStatus.Chưa_Giải_Quyết">Chờ xử lý</option>
                                                        <option value="@OrderStatus.Đã_Xử_Lí">Đang xử lý</option>
                                                        <option value="@OrderStatus.Đã_Vận_Chuyển">Đã gửi</option>
                                                        <option value="@OrderStatus.Đã_Giao_Hàng">Đã giao hàng</option>
                                                        <option value="@OrderStatus.Đã_Hủy">Đã hủy</option>
                                                    </select>
                                                    <button type="submit" class="btn btn-outline-danger btn-rounded" data-mdb-ripple-init data-mdb-ripple-color="dark"><i class="bi bi-arrow-bar-up"></i>Cập nhật trạng thái</button>
                                                </form>
                                            </span>
                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>

                        <div class="pagination-container" style="padding-top:10px">
                            @Html.PagedListPager(Model, page =>
                                     Url.Action("Index", new { page, pageSize = ViewBag.PageSize.SelectedValue, searchString = ViewData["CurrentFilter"] }),
                                     new PagedListRenderOptions
                            {
                                DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                DisplayLinkToLastPage = PagedListDisplayMode.Never,
                                LinkToPreviousPageFormat = "<",
                                LinkToNextPageFormat = ">",
                                UlElementClasses = new string[] { "pagination" },
                                LiElementClasses = new string[] { "page-item" },
                                PageClasses = new string[] { "page-link" },

                            })
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function confirmDelete(id) {
            if (confirm("Bạn có chắc chắn muốn xóa mục này?")) {
                $.ajax({
                    url: '@Url.Action("DeleteConfirmed", "Discounts")',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        // Nếu thành công, tải lại trang hoặc xóa hàng từ bảng
                        location.reload(); // Hoặc bạn có thể xóa hàng từ bảng thay vì tải lại trang
                    },
                    error: function (xhr, status, error) {
                        alert("Đã xảy ra lỗi: " + error);
                    }
                });
            }
        }
        function submitPageSize() {
            document.getElementById("pageSizeForm").submit();
        }
    </script>
}