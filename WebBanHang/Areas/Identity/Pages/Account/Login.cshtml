<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/style1.css">


</head>
<body class="img js-fullheight" style="background-image: url(/images/login.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Đăng nhập</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Bạn đã có tài khoản?</h3>
                        <form id="account" class="signin-form" method="post">
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control" placeholder="Tên đăng nhập" required>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Mật khẩu" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group d-md-flex">
                                <div class="checkbox mb-3">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        Nhớ tài khoản
                                        <span style="margin-left:27px">
                                        <input class="form-check-input" asp-for="Input.RememberMe " />
                                        </span>
                                    </label>
                                </div>
                                
                                
                                <div class="w-50 text-md-right" style="margin-left:35px">
                                    <a asp-area="" asp-controller="Account1" asp-action="ForgotPassword" style="color: #fff">Quên mật khẩu?</a>
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <button id="login-submit" type="submit" class="form-control btn btn-primary submit px-3">Đăng nhập</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div style="display:flex; " class=" text-md-left" >
                                <p > Bạn chưa có tài khoản? </p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="padding-left:4px"> Đăng kí</a>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Hoặc đăng nhập bằng &mdash;</p>
                        <div class="social d-flex text-center" style="justify-content:center">
                            
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div>
                                        <p>
                                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                                article
                                                about setting up this ASP.NET application to support logging in via external services
                                            </a>.
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins!)
                                                {
                                                    <button name="provider" value="@provider.Name" class="btn btn-secondary d-flex align-items-center p-2" style="justify-content:center">
                                                        <div class="bg-white p-1 rounded-full d-flex justify-content-center align-items-center" style="width: 30px; height: 25px; border-radius: 50%">
                                                            <svg class="w-3" viewBox="0 0 533.5 544.3" style="width: 16px; height: 16px;">
                                                                <path d="M533.5 278.4c0-18.5-1.5-37.1-4.7-55.3H272.1v104.8h147c-6.1 33.8-25.7 63.7-54.4 82.7v68h87.7c51.5-47.4 81.1-117.4 81.1-200.2z"
                                                                      fill="#4285f4" />
                                                                <path d="M272.1 544.3c73.4 0 135.3-24.1 180.4-65.7l-87.7-68c-24.4 16.6-55.9 26-92.6 26-71 0-131.2-47.9-152.8-112.3H28.9v70.1c46.2 91.9 140.3 149.9 243.2 149.9z"
                                                                      fill="#34a853" />
                                                                <path d="M119.3 324.3c-11.4-33.8-11.4-70.4 0-104.2V150H28.9c-38.6 76.9-38.6 167.5 0 244.4l90.4-70.1z"
                                                                      fill="#fbbc04" />
                                                                <path d="M272.1 107.7c38.8-.6 76.3 14 104.4 40.8l77.7-77.7C405 24.6 339.7-.8 272.1 0 169.2 0 75.1 58 28.9 150l90.4 70.1c21.5-64.5 81.8-112.4 152.8-112.4z"
                                                                      fill="#ea4335" />
                                                            </svg>
                                                        </div>
                                                        <span class="ml-2">
                                                            Đăng nhập với Google
                                                        </span>
                                                    </button>
                                                }
                                            </p>
                                        </div>
                                    </form>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main1.js"></script>
    
</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
